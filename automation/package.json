{
  "name": "qa-automation-framework",
  "version": "1.0.0",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --grep @ui",
    "test:api": "playwright test --grep @api",
    "test:e2e": "playwright test --grep @e2e",
    "test:layer": "playwright test --grep @layer-validation",
    "test:negative": "playwright test --grep @negative",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:setup": "sqlite3 db/seed.db < db/init.sql && cd api && npm install",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-playwright": "^2.9.2",
    "dotenv": "^16.3.0",
    "eslint": "^8.0.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.0.0"
  }
}
